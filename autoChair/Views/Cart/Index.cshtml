@model IEnumerable<autoChair.Models.CartItem>
@{
    ViewData["Title"] = "Panier";
    decimal total = ViewBag.Total;
    int itemCount = ViewBag.ItemCount ?? 0;
}

<div class="container mt-4">
    <h1>Votre Panier (@itemCount articles)</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Panier vide !</h4>
            <p>Commencez à ajouter des chaises à votre panier.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                Voir le catalogue
            </a>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">
                                @item.Product?.Name
                            </a>
                        </td>
                        <td>@item.Product?.Price.ToString("C2")</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <div class="input-group" style="width: 120px;">
                                    <input type="number" name="quantity" value="@item.Quantity" min="1"
                                           class="form-control" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">✓</button>
                                </div>
                            </form>
                        </td>
                        <td>@(((item.Product?.Price ?? 0) * item.Quantity).ToString("C2"))</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Supprimer cet article ?')">
                                    🗑️ Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-4">
            <div class="col-md-6 offset-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Résumé de la commande</h5>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <strong class="text-success" style="font-size: 1.5em;">@total.ToString("C2")</strong>
                        </div>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary w-100 mb-2">
                            ← Continuer les achats
                        </a>
                        <!-- ✅ Ce lien redirige vers Checkout (avec [Authorize]) -->
                        <a asp-controller="Orders" asp-action="Checkout" class="btn btn-success w-100">
                            Procéder au paiement →
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <!-- ✅ AFFICHER LES ERREURS DE STOCK -->
        @if (ViewBag.HasStockError == true)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>⚠️ Problème de stock :</strong>
                <ul class="mb-0 mt-2">
                    @foreach (var error in ViewBag.StockErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    }
</div>
